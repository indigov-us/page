{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "image": "AWS_ACCOUNT_ID.dkr.ecr.AWS_REGION.amazonaws.com/react:VERSION",
      "links": [
        "wordpress"
      ],
      "memoryReservation": 128,
      "name": "react"
    },
    {
      "name": "wordpress",
      "image": "AWS_ACCOUNT_ID.dkr.ecr.AWS_REGION.amazonaws.com/wordpress:VERSION",
      "memoryReservation": 384
    },
    {
      "image": "nginx",
      "memoryReservation": 256,
      "links": [
        "react",
        "wordpress"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/nginx.conf",
          "readOnly": true
        }
      ],
      "name": "nginx",
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/nginx/nginx.conf"
      }
    }
  ]
}
